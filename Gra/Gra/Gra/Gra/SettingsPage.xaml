<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gra.SettingsPage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ustawienia"
                HorizontalOptions="CenterAndExpand" 
                 />

            <xct:MediaElement x:Name="soundtrack" Source="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-2.mp3" HeightRequest="1" IsLooping="True" ></xct:MediaElement>
            <Slider 
             Maximum="100"
             ValueChanged="Slider_ValueChanged"
             Value="100"
             x:Name="slid"
                />

            <Label Text="100"
                HorizontalOptions="CenterAndExpand" 
                x:Name="sliderval"
                 />
            <Button  Text="zatwierdz" FontAttributes="Bold"  FontSize="24" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>